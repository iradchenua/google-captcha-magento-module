<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="namespace" xsi:type="string">dynamicshipping_form</item>
            <item name="provider" xsi:type="string">dynamicshipping_form.dynamicshipping_form_data_source</item>
            <item name="deps" xsi:type="string">dynamicshipping_form.dynamicshipping_form_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Ivan\DynamicShipping\Block\Adminhtml\Carrier\Edit\Button\Save"/>
        </buttons>
        <namespace>dynamicshipping_form</namespace>
        <ajaxSave>false</ajaxSave>
        <ajaxSaveType>simple</ajaxSaveType>
        <dataScope>data</dataScope>
        <deps>
            <dep>dynamicshipping_form.dynamicshipping_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dynamicshipping_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Ivan\DynamicShipping\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">dynamicshipping_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="js_config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                    <item name="submit_url" path="*/edit/save/index" xsi:type="url" />
                </item>
            </argument>
        </argument>
        <settings>
            <validateUrl path="*/add/validate"/>
            <submitUrl path="*/edit/save/index"/>
        </settings>
    </dataSource>
    <fieldset name="carrier_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Adding new Carrier</item>
            </item>
        </argument>
        <field name="carrier_is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">carrier</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Enable Carrier</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="carrier_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">carrier</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Carrier code</label>
            </settings>
        </field>
        <field name="carrier_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">carrier</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Carrier name</label>
            </settings>
        </field>
        <field name="shipping_method">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shipping</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Shipping method</label>
            </settings>
        </field>
        <field name="shipping_price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">shipping</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>number</dataType>
                <label translate="true">Shipping price</label>
            </settings>
        </field>
    </fieldset>
</form>
